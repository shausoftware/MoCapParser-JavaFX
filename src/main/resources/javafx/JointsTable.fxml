<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox fx:id="jointsTable" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="com.shau.mocap.ui.controller.JointsTableController">
   <padding>
      <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
   </padding>
   <children>
      <HBox>
         <children>
            <Label fx:id="lblCurrentFrameId" text="Current Frame ID:" />
         </children>
         <VBox.margin>
            <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
         </VBox.margin>
      </HBox>
      <TableView fx:id="tblJoints" prefHeight="600.0" prefWidth="350.0">
        <columns>
            <TableColumn fx:id="jointId" text="Joint ID" />
            <TableColumn fx:id="colour" text="Colour" />
            <TableColumn fx:id="display" text="Display" />
            <TableColumn fx:id="jointData" text="Joint Data" />
            <TableColumn fx:id="globalParameters" text="Global Parameters" />
            <TableColumn fx:id="centerJoint" text="Center Joint" />
        </columns>
      </TableView>
   </children>
</VBox>
